<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="wav2bfwav_任天堂wiiu" 
        Height="400" Width="600" 
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" x:Name="txtFilePath" IsReadOnly="True" 
                     VerticalAlignment="Center" Padding="5" 
                     Text="未选择任何文件"
                     Background="LightCoral"/>

            <Button Grid.Column="1" x:Name="btnSelectFiles" Content="选择文件" 
                    Width="90" Height="30" Margin="5,0,0,0" Click="btnSelectFiles_Click"/>

            <Button Grid.Column="2" x:Name="btnSelectFolder" Content="选择文件夹" 
                    Width="90" Height="30" Margin="5,0,0,0" Click="btnSelectFolder_Click"/>
        </Grid>

        <GroupBox Grid.Row="1" Header="编码格式" Margin="0,5" Padding="5">
            <StackPanel>
                <RadioButton x:Name="rbDSPADPCM" Content="DSP ADPCM(默认)" 
                             GroupName="Encoding" IsChecked="True" Margin="5" Checked="rbDSPADPCM_Checked"/>
                <RadioButton x:Name="rbPCM8" Content="8bit PCM" 
             GroupName="Encoding" Margin="5" Checked="rbPCM8_Checked"/>
                <RadioButton x:Name="rbPCM16" Content="16bit PCM" 
                             GroupName="Encoding" Margin="5" Checked="rbPCM16_Checked"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Row="2" Header="文件列表" Margin="0,5" Padding="5">
            <ListBox x:Name="lstFiles" 
                     SelectionMode="Extended"
                     Background="DarkOrange"
                     BorderThickness="1"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     DisplayMemberPath="FileName"/>
        </GroupBox>

        <Grid Grid.Row="3" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="1" CornerRadius="3" Padding="5" Margin="0,0,10,0" Background="LightYellow">
                <TextBlock x:Name="txtStatus" Text="就绪" VerticalAlignment="Center" TextWrapping="Wrap"/>
            </Border>

            <Button Grid.Column="1" x:Name="btnClear" Content="清空列表" 
                    Width="90" Height="35" Margin="0,0,5,0" Click="btnClear_Click"/>

            <Button Grid.Column="2" x:Name="btnProcess" Content="开始处理" 
                    Width="120" Height="35" IsEnabled="False" Click="btnProcess_Click"
                    Background="DodgerBlue" Foreground="Black"
                    FontWeight="Bold"/>
        </Grid>
    </Grid>
</Window>